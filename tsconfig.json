{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
	"noEmitOnError": true
  },
  "include": [ "*.ts"],
  "exclude": [ "node_modules" ]
}
